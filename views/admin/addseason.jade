#main
	.container
		section#adduser
			.hgroup
				h1 Add a season food here !
				h2 Fill in the normal information of food.
				ul.breadcrumb.pull-right
					li
						a(href='/adminIndex') Home
						span.divider /
					li.active Add season
		.row
			#leftcol.span12
				.new_user
					form
						.row
							.span4
							.span4
								//h4 Publish a new user
								.input-group
									span.input-group-addon &nbsp&nbsp&nbsp&nbsp&nbspName
									input.form-control(type='text' ng-model='season.name' id = "txt_name" placeholder="Name")
							.span4
						br
						.row
							.span4
							.span4
								.input-group
									span.input-group-addon Describe
									input.form-control(type='text' ng-model='season.description' id = "txt_description" placeholder="Your description")
							.span4
						br
						.row
							.span4
							.span1
								p(style='padding: 6px 12px;font-size: 14px;font-weight: normal;line-height: 1;color: #555;text-align: center;background-color: #eee;border: 1px solid #ccc;border-radius: 4px;') Type
							.span2
								select(id = "sel_type" ng-model='season.type' style='width:100%;')
									option(value = 1) Fruit
									option(value = 2) Meat
									option(value = 3) Other
							.span4
						.row
							.span4
							.span1
								p(style='padding: 6px 12px;font-size: 14px;font-weight: normal;line-height: 1;color: #555;text-align: center;background-color: #eee;border: 1px solid #ccc;border-radius: 4px;') Mounth
							.span2
								select(id = "sel_mounth" ng-model='season.mounth' style='width:100%;')
									option(value = 1) 1
									option(value = 2) 2
									option(value = 3) 3
									option(value = 4) 4
									option(value = 5) 5
									option(value = 6) 6
									option(value = 7) 7
									option(value = 8) 8
									option(value = 9) 9
									option(value = 10) 10
									option(value = 11) 11
									option(value = 12) 12
							.span4
						.row
							.span4
							.span1
								p(style='padding: 6px 12px;font-size: 14px;font-weight: normal;line-height: 1;color: #555;text-align: center;background-color: #eee;border: 1px solid #ccc;border-radius: 4px;') Picture
							.span2
								input.form-control(id = "sel_file" type='file' name='files' ng-file-select="onFileSelect1($files)" multiple accept="image/*" style='background-color: #fff;border: 1px solid #ccc;border-radius: 4px;')
							.span5
						.row
							.span4
							.span4
								aside.widget.ads.clearfix(ng-if='photoSee')
									a(href='')
										img(src='{{season.photo}}')
							.span4
						br
						.row
							.span5
							.span3
								button.btn.btn-primary.btn-large.pull-left(id = "btn_submit" ng-click='submitData()')
									span.glyphicon.glyphicon-ok &nbsp;Submit
							.span4
						.row
							.span4
							.span4
								output(id="result")
							.span4


