#main(style='min-height:500px')
	.container
		section#listFriendStatus
			.hgroup
				h1 All
				h2 You
				ul.breadcrumb.pull-right
					li
						a(href='/index') Home
						span.divider /
					li.active Friend Status
		.row
			#leftcol.span8
				article.post(ng-repeat="recipe in recipes")
					.post_header
						h3.post_title
							a(href='/attention/oneRecipe/{{recipe._id}}') {{recipe.recipeName}}
						.post_sub
							span.glyphicon.glyphicon-time {{recipe.logTime}} &nbsp;&nbsp;
								a(href='/attention/oneRecipe#post_comments')
									span.glyphicon.glyphicon-comment {{recipe.commentNum}} comments
					.post_content
						figure
							//a(href='/recipe/single')
								img(alt='0' src='{{recipe.photo}}')
						p {{recipe.description}}
						a.btn.btn-primary(href='/attention/oneRecipe/{{recipe._id}}') Read More

				.pagination.pagination-centered(attention-page page-object="pageing" click-function="list")
			#sidebar.span4
				//input(ng-model='ccc')
				//|{{ccc}}
				aside.widget
					h4 Search
				aside.widget
					.search-box
						a.search-icon(href='/attention/getAllAttention/{{search}}')
							span.glyphicon.glyphicon-search(style='top:4px')
						input.search(ng-model='search' placeholder='search')
				aside.widget
					h4 Categories
						//ul.nav.nav-tabs.nav-stacked(id='myTab')
							li.active
								a(data-toggle="tab" href='#Recipe') Recipe
					li
						button.btn.btn-info(ng-click='toRecipe()') Recipe
					li
						button.btn.btn-info(ng-click='toBlog()') Blog
					li
						button.btn.btn-info(ng-click='toTopic()') Topic