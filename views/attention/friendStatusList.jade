#main(style='min-height:500px')
	.container
		section#listFriendStatus
			.hgroup
				h1 All
				h2 You
				ul.breadcrumb.pull-right
					li
						a(href='/index') Home
						span.divider /
					li.active Friend Status
		.row
			#leftcol.span8
				#protfolio_container.portfolio_strict.row
					.portfolio_item.cat_travel.span4(ng-repeat="recipe in recipes")
						.portfolio_photo(style="background-image:url({{recipe.photo}})")
							a(href='/recipe/single/{{recipe._id}}')
								span.glyphicon.glyphicon-share
								p {{recipe.description}}
						.portfolio_description
							h3
								a(href='/recipe/single/{{recipe._id}}') {{recipe.recipeName}}
				.pagination.pagination-centered(recipe-page page-object="pageing" click-function="list")
			#sidebar.span4
				aside.widget
					h4 Search
				aside.widget
					.search-box
						a.search-icon(href='/attention/getAllAttention/')
							span.glyphicon.glyphicon-search(style='top:4px')
						input.search(ng-model='search' placeholder='search')
				aside.widget
					h4 Categories
					ul.nav.nav-tabs.nav-stacked(id='myTab')
						li.active
							a(data-toggle="tab" href="#Recipe") Recipe
						li
							a(data-toggle="tab" href="#Blog") Blog
						li
							a(data-toggle="tab" href="#Topic") Topic
