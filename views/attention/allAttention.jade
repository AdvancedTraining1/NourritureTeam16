#main(style='min-height:500px')
	.container
		section#listFriendStatus
			.hgroup
				h1 All here !
				h2 You
				ul.breadcrumb.pull-right
					li
						a(href='/index') Home
						span.divider /
					li.active Friend Status
		.row
			#leftcol.span8
				article.post(ng-repeat="user in users")
					.post_header
						h3.post_title
							//a(ng-click='aaa(recipe)') {{recipe.recipeName}}
							a(href='#') {{user.head}}
						.post_sub
							span.glyphicon.glyphicon-time {{user.username}} &nbsp;&nbsp;
								//a(href='/recipe/single#post_comments')
									span.glyphicon.glyphicon-comment {{recipe.commentNum}} comments
					.post_content
						//figure
							a(href='/recipe/single')
								img(alt='0' src='{{recipe.photo}}')
						//p {{recipe.description}}
						a.btn.btn-primary(href='/recipe/single') attention
				.pagination.pagination-centered(paging page-object="pageing" click-function="list")
			#sidebar.span4
				aside.widget
					h4 Search
				aside.widget
					.search-box
						//a.search-icon(ng-click='searchAttention()')
						a.search-icon(href='/attention/getAllAttention/{{search}}')
							span.glyphicon.glyphicon-search(style='top:4px')
						input.search(ng-model='search' placeholder='search')
				aside.widget
					h4 Categories
					ul.nav.nav-tabs.nav-stacked(id='myTab')
						li.active
							a(data-toggle="tab" href="#Recipe") Recipe
						li
							a(data-toggle="tab" href="#Blog") Blog
						li
							a(data-toggle="tab" href="#Topic") Topic