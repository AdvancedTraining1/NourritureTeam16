link(type='text/css' rel='stylesheet' href='css/simplePagination.css')

#main
	.container
		section#listRecipe
			.hgroup
				h1 All the recipes here !
				h2 You can get all the recipes you want from this page, or search the ones you want from the right bar.
				ul.breadcrumb.pull-right
					li
						a(href='/index') Home
						span.divider /
					li.active Recipes
		.row
			#leftcol.span8
				article.post(ng-repeat="recipe in recipes")
					.post_header
						h3.post_title
							a(href='/recipe/single') {{recipe.recipeName}}
						.post_sub
							span.glyphicon.glyphicon-time {{recipe.logTime}} &nbsp;&nbsp;
								a(href='/recipe/single#post_comments')
									span.glyphicon.glyphicon-comment {{recipe.commentNum}} comments
					.post_content
						figure
							a(href='/recipe/single')
								img(alt='0' src='{{recipe}}')
						p {{recipe.description}}
						a.btn.btn-primary(href='/recipe/single') Read More
			#sidebar.span4



h1 显示所有的菜谱，带分页
| pageNo : {{pageNo}}



div.page(data-ng-init='init()')
	ul
		li(ng-repeat="recipe in recipes") a {{recipe.recipeName}},{{recipe.description}}

	.pagination(paging page-object="pageing" click-function="list")

