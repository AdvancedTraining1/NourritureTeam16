#main(style='min-height:500px')
    .container
        section#blog
            .hgroup
                h1
                    | {{ blog.title }}
                h2
                    span.glyphicon.glyphicon-time
                        | {{blog.create_at}}&nbsp;&nbsp;
                        a(href='single_post.html#post_comments')
                    span.glyphicon.glyphicon-comment
                        |  {{blog.comment_count}} comments&nbsp;&nbsp;
                    span.glyphicon.glyphicon-star
                        |   {{blog.collect_count}} collects &nbsp;&nbsp;&nbsp;&nbsp;
                    a#collect(href='' ng-click="addCollect()" ng-if='seeCollect')
                        span.glyphicon.glyphicon-star-empty
                        |Collect
                    a#ccollect(ng-if='!seeCollect' ng-click="deleteCollect()")
                        span.glyphicon.glyphicon-star
                        |cancel Collected
                ul.breadcrumb.pull-right
                    li
                        a(href='/index') Home
                        span.divider /
                    li
                        a.active Blog
            .row
                #leftcol.span8
                    article.post(style="margin-bottom: 20px;")
                        .post_content
                            #post_content
                    .keyword_content
                        h5 Key content: {{blog.tag}}
                        //| !{blog.content}
                        //div.post_content!= {{blog.content}}
                    .like_content(style="text-align:right;margin-right:10px")
                        a(href="" ng-click="addLike()").glyphicon.glyphicon-thumbs-up {{blog.like_count}}
                    .post_comments
                        h4 Comments
                        h5(ng-if='noComment') No comments right now
                        .comment
                            .bs-docs-example
                                #accordion3.accordion
                                    .accordion-group
                                        .accordion-heading
                                            a.accordion-toggle#showcomment(href='#comment' data-parent="#accordion3" data-toggle="collapse") comment
                                        div#comment.accordion-body.collapse
                                            .accordion-inner
                                                .row(ng-repeat='comment in comments')
                                                    figure.span1
                                                        p author
                                                        img(alt='0' src='{{comment.author.head}}')
                                                    .span6
                                                        .comment_name user: {{comment.author.account}}
                                                            //a.reply(ng-click='addComment(comment.author._id)') Reply
                                                        .comment_date
                                                            span.glyphicon.glyphicon-time
                                                            | {{comment.time}}
                                                        .the_comment
                                                            br
                                                            p {{comment.content}}
                                                .pagination.pagination-centered(comment-page page-object="commentPaging" click-function="list")

                    .new_comment
                        h4 Add Comment
                        form
                            .row
                                .span8
                                    textarea.span8#commentcontent(rows="4" placeholder="Comments" ng-model='comment.content')
                            .row
                                .span8
                                    a.btn.send#pushcomment(ng-click='addComment()') Add comment
