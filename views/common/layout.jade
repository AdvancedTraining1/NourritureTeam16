script.
	$(function(){
		$("#menuTab > li").click(tab);
		function tab() {
			$(this).addClass("active").siblings().removeClass("active");
		};

		$.ajax({
			async : false,
			cache : false,      type: 'POST',
			dataType : "json",
			url: "/service/userinfo/isLogin",//请求的action路径
			error: function () {//请求失败处理函数
				//alert('请求失败');
				document.getElementById("loginAddress2").style.visibility = "hidden";//隐藏
			},
			success:function(data){ //请求成功后处理函数。
				if(data.message=="1"){
					//alert("data.username--"+data.username);
					document.getElementById('loginAddress').href="/userinfo/info";
					document.getElementById('loginName').innerHTML=data.username;

					document.getElementById("loginAddress2").style.visibility = "visible";//显示
				}else{
					document.getElementById("loginAddress2").style.visibility = "hidden";//隐藏
				}


			}
		});

	});


